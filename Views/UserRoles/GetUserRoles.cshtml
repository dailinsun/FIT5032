
@{
    ViewBag.Title = "GetUserRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetUserRoles</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label class="control-label col-md-2">Role Name</label>
            <div class="col-md-10">
                @Html.Editor("UserName", new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Get User Role" class="btn btn-default" />
            </div>
        </div>

    </div>
}

@if (ViewBag.RolesForUser != null)
{
    <div>
        <h3>Role for this user</h3>
        <ol>
            @foreach (string role in ViewBag.RolesForUser)
            {
                <li>@role</li>
            }
        </ol>

    </div>
}

<p>
    @Html.ActionLink("Back to index", "Index")
</p>
